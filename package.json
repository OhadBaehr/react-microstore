    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.2.3",
    "jsdom": "^28.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18"
